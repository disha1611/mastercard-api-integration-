# Mastercard API Configuration
# Copy this file to .env and fill in your actual credentials

# Mastercard Developer Credentials
MASTERCARD_CONSUMER_KEY=your_consumer_key_here
MASTERCARD_PRIVATE_KEY_PATH=./certs/your-private-key.p12
MASTERCARD_KEYSTORE_PASSWORD=your_keystore_password_here

# Environment Configuration
MASTERCARD_ENVIRONMENT=sandbox
# Options: sandbox, production

# API Base URLs (automatically set based on environment)
# MASTERCARD_SANDBOX_URL=https://sandbox.api.mastercard.com
# MASTERCARD_PRODUCTION_URL=https://api.mastercard.com

# Application Configuration
NODE_ENV=development
PORT=3000
PHP_PORT=8080

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/mastercard-api.log

# Database Configuration (if needed for your application)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=mastercard_integration
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# Security Configuration
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_URL=https://your-domain.com/webhooks/mastercard

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Timeout Configuration
API_TIMEOUT_MS=30000
CONNECTION_TIMEOUT_MS=5000

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Monitoring and Analytics
ENABLE_MONITORING=true
ANALYTICS_KEY=your_analytics_key_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@your-domain.com

# Additional API Keys (if using other services)
ENCRYPTION_KEY=your_encryption_key_here
AUDIT_LOG_ENABLED=true
